export func padLeft(text: string, width: int64, padChar: string): string {
    let padding = "";
    let i = 0;
    while i < width {
        padding = padding + padChar;
        i = i + 1;
    }
    return padding + text;
}

export func padRight(text: string, width: int64, padChar: string): string {
    let padding = "";
    let i = 0;
    while i < width {
        padding = padding + padChar;
        i = i + 1;
    }
    return text + padding;
}

export func replicate(text: string, count: int64): string {
    let result = "";
    let i = 0;
    while i < count {
        result = result + text;
        i = i + 1;
    }
    return result;
}
