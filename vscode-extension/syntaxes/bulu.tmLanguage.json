{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Bulu",
  "scopeName": "source.bulu",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#types"
    },
    {
      "include": "#functions"
    },
    {
      "include": "#constants"
    },
    {
      "include": "#operators"
    },
    {
      "include": "#punctuation"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.bulu",
          "match": "//.*$"
        },
        {
          "name": "comment.block.bulu",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.bulu",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.bulu",
              "match": "\\\\(n|r|t|\\\\|\"|'|x[0-9a-fA-F]{2}|u\\{[0-9a-fA-F]+\\})"
            }
          ]
        },
        {
          "name": "string.quoted.single.bulu",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.bulu",
              "match": "\\\\(n|r|t|\\\\|\"|'|x[0-9a-fA-F]{2}|u\\{[0-9a-fA-F]+\\})"
            }
          ]
        },
        {
          "name": "string.quoted.backtick.bulu",
          "begin": "`",
          "end": "`"
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.hex.bulu",
          "match": "\\b0[xX][0-9a-fA-F_]+\\b"
        },
        {
          "name": "constant.numeric.binary.bulu",
          "match": "\\b0[bB][01_]+\\b"
        },
        {
          "name": "constant.numeric.octal.bulu",
          "match": "\\b0[oO][0-7_]+\\b"
        },
        {
          "name": "constant.numeric.float.bulu",
          "match": "\\b[0-9][0-9_]*\\.[0-9_]+([eE][+-]?[0-9_]+)?\\b"
        },
        {
          "name": "constant.numeric.integer.bulu",
          "match": "\\b[0-9][0-9_]*\\b"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.bulu",
          "match": "\\b(if|else|while|for|break|continue|return|match|select|defer|try|fail)\\b"
        },
        {
          "name": "keyword.declaration.bulu",
          "match": "\\b(let|const|func|struct|interface|type|import|export)\\b"
        },
        {
          "name": "keyword.operator.bulu",
          "match": "\\b(and|or|not|as|in)\\b"
        },
        {
          "name": "keyword.other.bulu",
          "match": "\\b(async|await|run|chan|lock|yield|pub|priv)\\b"
        },
        {
          "name": "storage.modifier.bulu",
          "match": "\\b(mut|ref)\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "storage.type.primitive.bulu",
          "match": "\\b(int8|int16|int32|int64|uint8|uint16|uint32|uint64|int|uint|float32|float64|bool|char|string|byte|rune|any|void)\\b"
        },
        {
          "name": "storage.type.collection.bulu",
          "match": "\\b(array|slice|map|chan)\\b"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.bulu",
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?=\\()"
        },
        {
          "name": "support.function.builtin.bulu",
          "match": "\\b(print|println|printf|input|len|cap|make|append|delete|close|copy|clone|panic|recover|assert|typeof|instanceof|sizeof)\\b"
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.language.bulu",
          "match": "\\b(true|false|null|nil)\\b"
        },
        {
          "name": "variable.language.bulu",
          "match": "\\b(self|this)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.arithmetic.bulu",
          "match": "(\\+|\\-|\\*|\\/|%|\\*\\*)"
        },
        {
          "name": "keyword.operator.comparison.bulu",
          "match": "(==|!=|<|>|<=|>=)"
        },
        {
          "name": "keyword.operator.logical.bulu",
          "match": "(&&|\\|\\||!)"
        },
        {
          "name": "keyword.operator.bitwise.bulu",
          "match": "(&|\\||\\^|<<|>>|~)"
        },
        {
          "name": "keyword.operator.assignment.bulu",
          "match": "(=|\\+=|\\-=|\\*=|\\/=|%=|&=|\\|=|\\^=|<<=|>>=)"
        },
        {
          "name": "keyword.operator.arrow.bulu",
          "match": "(->|=>|<-)"
        }
      ]
    },
    "punctuation": {
      "patterns": [
        {
          "name": "punctuation.separator.bulu",
          "match": "[,;:]"
        },
        {
          "name": "punctuation.brackets.bulu",
          "match": "[\\[\\]\\(\\)\\{\\}]"
        },
        {
          "name": "punctuation.accessor.bulu",
          "match": "\\."
        }
      ]
    }
  }
}
