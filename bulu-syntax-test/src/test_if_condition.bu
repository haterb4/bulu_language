// Test des conditions if

func testCondition(x: float64): string {
    println("testCondition appelé avec x = " + x.toString())
    
    let isValid = x >= 0.0
    println("x >= 0.0 = " + isValid.toString())
    
    if isValid {
        println("Condition vraie")
        return "positif"
    } else {
        println("Condition fausse")
        return "négatif"
    }
}

func main() {
    println("=== Test Conditions If ===")
    
    let result1 = testCondition(3.0)
    println("testCondition(3.0): " + result1)
    
    let result2 = testCondition(-5.0)
    println("testCondition(-5.0): " + result2)
    
    println("Test terminé")
}