// Test des nombres négatifs

struct Calculator {
    value: float64
    
    pub func testNegative(x: float64): bool {
        println("testNegative appelé avec x = " + x.toString())
        return x < 0.0
    }
    
    pub func addNegative(x: float64): float64 {
        println("addNegative appelé avec x = " + x.toString())
        return this.value + x
    }
}

func main() {
    println("=== Test Nombres Négatifs ===")
    
    let calc = Calculator{value: 10.0}
    println("Calculator créé avec value = 10.0")
    
    // Test avec nombre négatif
    let negative = -5.0
    println("Nombre négatif: " + negative.toString())
    
    let isNeg = calc.testNegative(negative)
    println("testNegative(-5.0): " + isNeg.toString())
    
    let result = calc.addNegative(negative)
    println("addNegative(-5.0): " + result.toString())
    
    // Test avec nombre positif
    let positive = 3.0
    println("Nombre positif: " + positive.toString())
    
    let isPos = calc.testNegative(positive)
    println("testNegative(3.0): " + isPos.toString())
    
    println("Test terminé")
}