// Test des channels basiques

func main() {
    println("=== Test des channels basiques ===")
    
    // Test 1: Création d'un channel unbuffered
    println("Test 1: Création d'un channel unbuffered")
    let ch = make(chan int32)
    println("Channel créé: " + ch.toString())
    
    // Test 2: Création d'un channel buffered
    println("\nTest 2: Création d'un channel buffered")
    let buffered_ch = make(chan string, 5)
    println("Channel buffered créé: " + buffered_ch.toString())
    
    // Test 3: Envoi et réception simple (avec goroutine)
    println("\nTest 3: Envoi et réception simple")
    let simple_ch = make(chan int32)
    
    // Envoyer une valeur dans une goroutine
    run func() {
        println("Valeur en cours d'envoie")
        simple_ch <- 42
        println("Valeur envoyée: 42")
    }()
    
    // Recevoir la valeur
    let received = <-simple_ch
    println("Valeur reçue: " + received.toString())
}