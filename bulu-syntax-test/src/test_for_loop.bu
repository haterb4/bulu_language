// Test des boucles for

func main() {
    println("=== Test des boucles for ===")
    
    // Boucle for simple avec range
    println("Boucle for avec range:")
    for i in 0...5 {
        println("i = " + i.toString())
    }
    
    // Boucle for avec array
    println("\nBoucle for avec array:")
    let numbers = [1, 2, 3, 4, 5]
    for idx, num in numbers {
        println("sum at index: "+idx.toString())
        println("num = " + num.toString())
    }
    
    // Boucle for avec accumulation
    println("\nBoucle for avec accumulation:")
    let sum = 0
    for i in 1..6 {
        sum = sum + i
    }
    println("Somme de 1 à 5: " + sum.toString())
    
    println("Test terminé")
}