// Test d'appel de méthode dans if

struct Validator {
    threshold: float64
    
    pub func isValid(x: float64): bool {
        println("isValid appelé avec x = " + x.toString())
        let result = x >= this.threshold
        println("x >= " + this.threshold.toString() + " = " + result.toString())
        return result
    }
    
    pub func process(x: float64): string {
        println("process appelé avec x = " + x.toString())
        
        if this.isValid(x) {
            println("Validation réussie")
            return "accepté"
        } else {
            println("Validation échouée")
            return "rejeté"
        }
    }
}

func main() {
    println("=== Test Méthode dans If ===")
    
    let validator = Validator{threshold: 0.0}
    println("Validator créé avec threshold = 0.0")
    
    let result1 = validator.process(3.0)
    println("process(3.0): " + result1)
    
    let result2 = validator.process(-5.0)
    println("process(-5.0): " + result2)
    
    println("Test terminé")
}