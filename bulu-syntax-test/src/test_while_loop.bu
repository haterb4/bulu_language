// Test des boucles while

func main() {
    println("=== Test des boucles while ===")
    
    // Boucle while simple
    println("Boucle while simple:")
    let i = 0
    while i < 5 {
        println("i = " + i.toString())
        i = i + 1
    }
    
    // Boucle while avec condition complexe
    println("\nBoucle while avec condition complexe:")
    let x = 1
    let y = 10
    while x < y && x < 8 {
        println("x = " + x.toString() + ", y = " + y.toString())
        x = x * 2
        y = y - 1
    }
    
    // Boucle while avec break
    println("\nBoucle while avec break:")
    let counter = 0
    while true {
        if counter >= 3 {
            break
        }
        println("counter = " + counter.toString())
        counter = counter + 1
    }
    
    println("Test termin√©")
}